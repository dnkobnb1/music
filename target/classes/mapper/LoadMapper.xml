<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.music.mapper.LoadMapper">
    <resultMap id="album" type="com.music.pojo.Album">
        <id property="album_id" column="album_id"></id>
        <result property="album_name" column="album_name"></result>
        <result property="album_rease" column="album_rease"></result>
        <result property="corporation" column="corporation"></result>
        <result property="album_img" column="album_img"></result>
        <association property="songer" resultMap="songer"></association>
    </resultMap>
    <resultMap id="music" type="com.music.pojo.Music">
        <result property="music_name" column="music_name"></result>
        <result property="music_img" column="music_img"></result>
        <result property="duration" column="duration"></result>
        <association property="songer" resultMap="songer"></association>
    </resultMap>
    <resultMap id="songer" type="com.music.pojo.Songer">
        <id property="songer_id" column="songer_id"></id>
        <result property="songer_name" column="songer_name"></result>
        <result property="songer_introduce" column="songer_introduce"></result>
        <result property="songer_img" column="songer_img"></result>
    </resultMap>

    <select id="load_index_song" resultMap="music">
        select music_name,songer_name,music_img,duration from music natural join songer limit 9
    </select>

    <select id="load_index_album" resultMap="album">
        select album_name,album_img,songer_name from album natural join songer limit 5
    </select>

    <select id="load_index_musicsheet" resultType="com.music.pojo.MusicSheet">
        select list_name,volume,list_img from songlist limit 5
    </select>

    <select id="load_rank_hot" resultMap="music">
        select music_name,songer_name from music natural join songer order by volume_total desc limit 3
    </select>

    <select id="load_rank_new" resultMap="music">
        select music_name,songer_name from music natural join songer limit 3
    </select>

    <select id="load_rank_style" resultMap="music">
        select music_name,songer_name from music natural join songer order by volume_week desc limit 3
    </select>

    <select id="load_rank_eu" resultMap="music">
        select music_name,songer_name from music natural join songer where area='欧美' limit 3
    </select>

    <select id="load_rank_korea" resultMap="music">
        select music_name,songer_name from music natural join songer where area='韩国' limit 3
    </select>
</mapper>
